<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:baselineAligned="false"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="0dp"
        android:text="@string/wo"
        android:textColor="@color/bar_red" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:text="@string/was"
        android:textColor="@color/bar_red" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:text="@string/wieviel"
        android:textColor="@color/bar_red" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:text="@string/situation"
        android:textColor="@color/bar_red" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/warten"
        android:textColor="@color/bar_red" />

    <EditText
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:clickable="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center_vertical|center_horizontal"
        android:inputType="textPersonName"
        android:text="@string/aktuellePosition" >

        <requestFocus />

    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btnPolizei"
            style="@style/ButtonText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_16dp"
            android:layout_marginRight="@dimen/layout_16dp"
            android:background="@drawable/button"
            android:clickable="false"
            android:drawableLeft="@drawable/btn_polizei"
            android:duplicateParentState="false"
            android:longClickable="false"
            android:onClick="btnPolizeiClick"
            android:text="@string/btnPolizei"
            android:typeface="sans" />

        <Button
            android:id="@+id/btnFeuerwehr"
            style="@style/ButtonText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_16dp"
            android:layout_marginRight="@dimen/layout_16dp"
            android:layout_marginTop="@dimen/layout_16dp"
            android:background="@drawable/button"
            android:drawableLeft="@drawable/btn_feuerwehr"
            android:onClick="btnFeuerwehrClick"
            android:text="@string/btnFeurwehr"
            android:typeface="sans" />

        <Button
            android:id="@+id/btnRettung"
            style="@style/ButtonText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_16dp"
            android:layout_marginRight="@dimen/layout_16dp"
            android:layout_marginTop="@dimen/layout_16dp"
            android:background="@drawable/button"
            android:drawableLeft="@drawable/btn_rettung"
            android:onClick="btnRettungClick"
            android:text="@string/btnRettung"
            android:typeface="sans" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/layout_20dp"
            android:text="@string/waehlen"
            android:textColor="@color/grau" />

    </LinearLayout>

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-30dp"
        android:text="@string/feedback" />

</LinearLayout>